<h1>Attendance for <%= Date.today %></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Attendance Date</th>
    <th>Seat</th>
  </tr>
  <% @attendances.each do |attendance| %>
    <tr>
      <td><%= link_to attendance.student.name, attendances_path(:search => attendance.student.id) %></td>
      <td><%= attendance.attended_on %></td>
      <td><%= attendance.seat %></td>
    </tr>
  <% end %>
</table>
        

<%= link_to "Log Attendance", new_attendance_path, class: "btn btn-primary navbar-btn" %>