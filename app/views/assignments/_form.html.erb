<div class="row col-sm-6">
  <%= form_for @assignment do |f| %>
    <div class="form-group">
      <%= f.label :student_name, 'Student Name' %>
      <%= f.collection_select :student_id, Student.all, :id, :name%>
    </div>

    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :score, 'Score' %>
      <%= f.text_field :score, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :total, 'Total' %>
      <%= f.text_field :total, class: 'form-control' %>
    </div>

    <%= f.submit submit_copy, class: 'btn btn-primary' %>
    &nbsp;or
    <%= link_to 'Cancel', students_path %>
  <% end %>
</div>